<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StockFragment"
    android:background="@color/neutral_800">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Stock Symbol"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/stock_table"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/calculate_metrics_button"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.519"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:id="@+id/table_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/table_row_text_1"
                android:layout_column="0"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/home"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/table_row_text_2"
                android:layout_column="1"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/home"
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/calculate_metrics_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compute Performance Metrics"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="384dp" />

    <Button
        android:id="@+id/favourite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="184dp"
        android:text="Favourite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculate_metrics_button"
        tools:layout_editor_absoluteX="147dp" />
</androidx.constraintlayout.widget.ConstraintLayout>